# env.example â€” Required environment variables for the Skills-First AI Assistant.
#
# Rename to .env and fill in values:
#   cp env.example .env
#
# NEVER commit .env to version control.

# --- Phoenix ---
SECRET_KEY_BASE=generate-with-mix-phx-gen-secret
PHX_HOST=localhost
PORT=4000

# --- Database (PostgreSQL) ---
# Production: full DATABASE_URL
DATABASE_URL=ecto://postgres:postgres@localhost:5432/assistant_prod
# Dev/test use config/dev.exs and config/test.exs defaults

# --- OpenRouter (LLM + STT) ---
OPENROUTER_API_KEY=sk-or-...

# --- Google Service Account ---
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# --- ElevenLabs (TTS) ---
ELEVENLABS_API_KEY=xi-...
ELEVENLABS_VOICE_ID=your-voice-id

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# --- Google Chat ---
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/...

# --- HubSpot ---
HUBSPOT_API_KEY=pat-...

# --- Encryption (Cloak.Ecto) ---
# Generate with: :crypto.strong_rand_bytes(32) |> Base.encode64()
CLOAK_ENCRYPTION_KEY=base64-encoded-32-byte-key
